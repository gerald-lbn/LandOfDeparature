services:
  homer:
    image: b4bz/homer
    container_name: homer
    volumes:
      - {{ homer.volumes.assets }}:/www/assets # Make sure your local config directory exists
    ports:
      - {{ homer.ports.http }}:8080
    user: 1000:1000 # default
    environment:
      - INIT_ASSETS=0 # default, requires the config directory to be writable for the container user (see user option)
    restart: unless-stopped